<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
    <main>
        
        <div class="index-header">
          <h1>Welcome to your PillBox, <%= username %>!</h1>

        </div>
        <div class="container">
          <h4>Your medicines for today:</h4>
          <% for (pill of pills) { %>
              <article class="card">
                <div class="check-button">
                <i class="far fa-check-circle"></i>
                </div>
                <div class="card-content">
                  <a href="/pills/<%= pill._id %>">
                    <h3><%= pill.name %></h3>
                  </a>
                  <p><%= pill.dosage %> per day</p>
                  <p><strong>Stock: </strong><%= pill.stock %>
                  </p>
                  <p><strong>Type:</strong> <%= pill.type %></p>
                  <p><strong>Time:</strong> <%= pill.time %></p>
                </div>
                <div class="card-image" >
                  <% if(pill.type === "capsule"){ %>
                    <img src ="/img/capsule.png" width="80px">
                    <% } else if (pill.type === "tablet") { %>
                      <img src ="/img/tablets.png" width="80px">
                    <% } else if (pill.type === "softgel") { %> 
                      <img src ="/img/softgel.png" width="80px">
                    <% } else if (pill.type === "syrup") { %> 
                      <img src ="/img/syrup.png" width="80px">
                    <% } else if (pill.type === "aerosol") { %> 
                      <img src ="/img/aerosol.png" width="80px">
                    <% } else if (pill.type === "injection") { %> 
                      <img src ="/img/injection.png" width="80px">
                  <% } %> 
                </div>
              </article>
          <% } %>
        </div>
        <%- include("../partials/nav.ejs") %>
    </main>
  </body>
</html>

